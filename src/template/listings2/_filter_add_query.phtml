    $filters = Filters::buildFilterConfig();  
    
    $groups = [];
    foreach($filters as $f){   
        $groups[$f['optgroup']][] = $f;
    }            
    //t($groups);
?>
 <div class="form-group">
    <label>Select Filter</label>
    <select class="form-control filter-query-selector">
        <? foreach($groups as $label=>$g): ?>
