            <? foreach($g as $f): ?>
            <option value="<?=$f['id']?>" data-type="<?=$f['type']?>"><?=$f['label']?></option>
            <? endforeach; ?>
        </optgroup>
        <? endforeach; ?>
    </select>
</div>

